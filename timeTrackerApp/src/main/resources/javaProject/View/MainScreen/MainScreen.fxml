<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="javaProject.Controller.MainScreenController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <!--
  Bloc pour le label date et heure
  -->
  <HBox spacing="10.0" alignment="TOP_CENTER">
    <Label fx:id="dateText"/>
  </HBox>
  <HBox spacing="10.0" alignment="TOP_CENTER">
    <Label fx:id="timeText" styleClass="time-text"/>
  </HBox>

  <!--
  Bloc pour les boutons de start/stop et le texte de validation
  -->
  <HBox spacing="10.0" alignment="CENTER">
    <Button fx:id="startButton" text="Start Working!" onAction="#onStartButtonClick" styleClass="start-button"/>
    <Button fx:id="stopButton" text="Stop Working!" onAction="#onStopButtonClick" styleClass="stop-button"/>
  </HBox>
  <Label fx:id="statusText"/>

  <!--
  Bloc pour l'entrée de l'ID employé
  -->
  <HBox spacing="10.0" alignment="CENTER">
    <TextField fx:id="inputEmployeeId"/>
    <Button fx:id="validateIDButton" text="Valider ID" onAction="#onValidateIdButtonClick" styleClass="validate-id-button"/>
  </HBox>


</VBox>
